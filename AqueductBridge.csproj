<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <OutputType>Library</OutputType>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <UseWPF>true</UseWPF>
    <!-- Try different possible locations for ExileApi assemblies -->
    <ExileApiPath Condition="'$(ExileApiPath)' == '' AND Exists('..\..\..\ExileCore.dll')">..\..\..\</ExileApiPath>
    <ExileApiPath Condition="'$(ExileApiPath)' == '' AND Exists('..\..\ExileCore.dll')">..\..\</ExileApiPath>
    <ExileApiPath Condition="'$(ExileApiPath)' == '' AND Exists('..\..\..\..\ExileCore.dll')">..\..\..\..\</ExileApiPath>
    <ExileApiPath Condition="'$(ExileApiPath)' == ''">..\..\..\..\</ExileApiPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="ExileCore">
      <HintPath>$(ExileApiPath)ExileCore.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="GameOffsets">
      <HintPath>$(ExileApiPath)GameOffsets.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="ImGui.NET">
      <HintPath>$(ExileApiPath)ImGui.NET.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="ProcessMemoryUtilities">
      <HintPath>$(ExileApiPath)ProcessMemoryUtilities.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>

  <PropertyGroup>
    <OutputPath>$(MSBuildProjectDirectory)\bin\$(Configuration)\</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

</Project> 